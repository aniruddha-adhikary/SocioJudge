    <title>SocioJudge</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <link href="/css/jumbotron-narrow.css" rel="stylesheet">
</head>

<body>

<div class="container">
    <div class="header clearfix">
        <h3 class="text-muted">SocioJudge</h3>
    </div>

    <div class="jumbotron">
        <h1>Let's get you scored!</h1>
        <p class="lead">Please login with your Facebook Account to continue. Click the button below to log in. Enter the
            displayed code below when asked on Facebook.</p>
        <p><a id="loginButton" class="btn btn-lg btn-success" href="#"
              role="button" style="background-color: rgb(59,89,152);">Login with Facebook</a></p>
        <p>
            <a id="verifyButton" class="btn btn-lg btn-success" href="/api/verifyCod"
               role="button">Proceed</a>
        </p>
    </div>


    <footer class="footer">
        <p>&copy; 2016 Aniruddha Adhikary, Samia Jahin</p>
    </footer>

</div> <!-- /container -->
<script src="/js/jquery-3.1.1.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script>
$(document).ready(function(){
    $('#verifyButton').hide();
     $(document).on("click", '#loginButton', function(event){
      $.ajax({
       url: "/api/getCode/",
       success: function(data) {
        console.log(data);
        if (data != "error") { window.location.replace("http://127.0.0.1/api/verifyCode/" + data); }
       }
      });
     });
});

</script>
</body>
</html>
